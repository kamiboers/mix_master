<h1>Songs by <%= @artist.name %></h1>
<div class="songs-box">
<table class="table-striped table-hover table-condensed table">
<% @songs.each do |song| %>
	<tr><td><%=  link_to "#{song.title}", song_path(song) %>
	<div class="btn-group btn-group-xs pull-right" role="group">

	<div class="btn btn-info"><%= link_to "Edit", edit_song_path(song) %></div>
	<div class="btn btn-danger"><%= link_to "Delete", song_path(song), method: :delete, data: { confirm: 'Are you sure that you want to delete ' + song.title + '?' } %></div>
	</div>
	</td></tr>
<% end %>
</table>
</div>
<%= link_to "#{@artist.name}", artist_path(@artist) %>